{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "outbox": {
      "type": "array",
      "items": { "$ref": "#/$defs/message" },
      "minItems": 0,
      "maxItems": 2
    },
    "rationale": { "type": "string" },
    "negotiation_notes": { "type": "string" }
  },
  "required": ["outbox"],
  "$defs": {
    "message": {
      "type": "object",
      "properties": {
        "sender": { "type": "string", "minLength": 1 },
        "receivers": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 },
          "minItems": 1,
          "uniqueItems": true
        },
        "intent": {
          "type": "string",
          "enum": ["propose","request","inform","counter","accept","commit","threat","abort"]
        },
        "content": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        },
        "valid_until_tick": { "type": "integer", "minimum": 0 }
      },
      "required": ["sender","receivers","intent","content","valid_until_tick"]
    }
  }
}
